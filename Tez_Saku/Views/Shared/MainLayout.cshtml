    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
           
            $('#searchButton').click(function () {
                removeAllHighlights(); // Tüm vurguları kaldır
                var searchText = $('#searchInput').val().trim(); // Aranan metni al
                if (searchText !== '') { // Eğer arama metni boş değilse devam et
                    var searchRegEx = new RegExp(searchText, 'gi'); // Büyük/küçük harf duyarlı olmadan arama yapacak regex
                    $('body').find('*').each(function () {
                        if ($(this).children().length === 0) { // Sadece metin içeren öğeleri kontrol et
                            var content = $(this).text(); // Öğenin metnini al
                            var highlightedContent = content.replace(searchRegEx, function (match) {
                                return '<span class="highlight">' + match + '</span>'; // Aranan metni vurgula
                            });
                            $(this).html(highlightedContent); // Vurgulanmış içeriği yerine koy
                        }
                    });
                }
            });

            function removeAllHighlights() {
                $('.highlight').each(function () {
                    $(this).replaceWith($(this).text());
                });
            }


            // Sayfa yüklendiğinde vurgulamayı kontrol et
            highlightTargetID();

            // Sayfa yenilendiğinde veya hash değiştiğinde vurgulamayı güncelle
            $(window).on('hashchange', function () {
                highlightTargetID();
            });




            // Vurgulama fonksiyonu
            function highlightTargetID() {
                // Sayfa yüklendiğinde URL'de mevcut olan başlık ID'sini al
                var targetID = window.location.hash.substring(1);

                // Eğer URL'de bir başlık ID'si varsa ve bu ID sayfada bulunuyorsa, başlığı vurgula
                if (targetID && $("#" + targetID).length) {
                    // Önce tüm vurguları kaldır
                    $(".highlight").removeClass("highlight");

                    // Belirtilen ID'ye sahip öğeyi vurgula
                    $("#" + targetID).addClass("highlight");
                }
            }

        });

        document.getElementById("goToTopButton").addEventListener("click", function () {
            window.scrollTo({ top: 0, behavior: "smooth" }); // Sayfanın en üstüne animasyonlu olarak git
        });
    </script>
